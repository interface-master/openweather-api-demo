{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
    },
    "exclude": ["./dist"],
    "include": ["./react", "./**/*.tsx?"],
}